---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Cta from "@components/cta.astro";
import { Icon } from "astro-icon";

const videos = [
  {
    title: "How to build a revolutionary Solana Lottery Dapp",
    url: "https://www.youtube.com/embed/uIQDNVbaQn8",
    desc: "Revolutionary Secure Messaging & Trading Dapp powered by Solana.",
  },
  {
    title: "Getting Started : Solana DApp Development ",
    url: "https://www.youtube.com/embed/iy76gSQ39lM",
    desc: "Get this as a complete course and earn certificate on DApp World",
  },
  {
    title: "Solana Development: Smart Contract Life Cycle High Level",
    url: "https://www.youtube.com/embed/-7b9zKBwdpo",
    desc: "A quick overview to understand the life cycle of a Solana Smart Contract",
  },
];
---

<Layout title="Stake">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Stake</Fragment>
      <Fragment slot="desc">
        Start staking by delegating to your favourite validators
      </Fragment>
    </Sectionhead>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-10 mt-16">
      {
        videos.map((item) => (
          <div>
            <div class="aspect-video overflow-hidden">
              <iframe
                width="100%"
                height="100%"
                src={item.url}
                title="YouTube video player"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                allowfullscreen
              />
            </div>
            <h2 class="mt-3 text-xl font-semibold ">{item.title}</h2>
            <p class="mt-1 text-gray-700">{item.desc}</p>
          </div>
        ))
      }
    </div>
    <div class="mt-10 mx-auto text-center text-gray-300">——</div>
    <p class="mt-10 mx-auto max-w-xl text-gray-700 text-center">
      If our values resonate with yours, please consider supporting our work
      across the Solana ecosystem by staking with us.
    </p>
  </Container>
</Layout>
