---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Image } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">Let's connect.</Fragment>
    </Sectionhead>

    <div
      class="grid md:grid-cols-2 place-items-center gap-10 mx-auto max-w-4xl mt-16">
      <div class="py-6 md:order-1 hidden md:block">
        <Image
          src={heroImage}
          alt="Astronaut in the air"
          loading="eager"
          format="avif"
        />
      </div>
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Contact Chainflow</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Want to talk about our validator, Solana, decentralization, or
          building a brighter future?
          <br /> Please send us an email to start the conversation.
        </p>

        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:hello@chainflow.io">hello@chainflow.io</a
            >
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:twitter" />
            <a href="https://twitter.com/ChainflowPOS">@ChainflowPOS</a>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>
